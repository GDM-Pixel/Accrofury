<script>
    import { jarallax } from "jarallax";
    function initJarallax() {
        jarallax(document.querySelectorAll(".jarallaxhero"), {
            speed: 0.2,
        });
    }
    document.addEventListener("DOMContentLoaded", initJarallax);
    document.addEventListener("astro:page-load", initJarallax);
</script>
<style lang="scss">
	.heroboxhome {
		@apply relative flex flex-col w-full text-white xl:aspect-[16/6] lg:aspect-[16/7.5] md:aspect-[16/10] sm:aspect-[16/12] xs:aspect-[16/16] mt-0 z-0;
		.herocontainer {
			@apply relative mx-auto md:max-w-4xl w-full h-full md:-mt-10 mt-0 z-10 flex flex-col justify-center items-center text-center px-4 sm:px-8 xs:px-4 drop-shadow-lg;
		}
		.heroimg {
			@apply absolute top-0 left-0 w-full h-full object-cover object-center z-0;
		}
		h1 {
			@apply text-[19px] font-sylfaen font-normal text-white mb-8;
		}
		.baseline {
			@apply font-lemon xl:text-[40px] lg:text-xxl md:text-xl sm:text-xl text-lg uppercase leading-[1.5em] lg:leading-[1.6em] text-white mb-4;
		}

		.cta_container {
			@apply mt-6 gap-4 flex sm:text-sm xs:text-xs md:text-base xs:mx-auto xs:justify-center sm:justify-start;
		}
		.overlay {
			@apply absolute top-0 left-0 w-full h-full bg-black opacity-30 z-0;
		}
	}
	.reassurance {@apply md:grid md:grid-cols-3  flex flex-col mx-auto lg:gap-12 gap-4 px-6 -mb-20 z-20 relative;
		.reassurbox {
		@apply xl:w-[390px] lg:w-[300px] text-center xl:text-left bg-scroll border-2 border-blackbean rounded-lg shadow-lg lg:p-8 p-4 text-blackbean;
		box-shadow:
			2px 2px 3px rgba(0, 0, 0, 0.2),
			0 0 15px #9b7025ae inset;
		@apply xl:flex xl:flex-row flex-col justify-center items-center gap-4;
		.right-content {
			@apply flex-auto;
		}
		svg {
			@apply shrink-0 flex-auto mx-auto lg:mb-6 mb-2 lg:w-20 w-14;
		}
		.h3 {
			@apply font-lemon text-lg;
		}
		p {
			@apply font-sylfaen text-lg;
		}
	}
	}
</style>
